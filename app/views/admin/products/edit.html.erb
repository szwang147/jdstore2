<h2> edit the product</h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="group">
    <%= f.input :description %>
  </div>
  <div class="group">
    <%= f.input :quantity %>
  </div>
  <div class="group">
    <%= f.input :price %>
  </div>

  <% if @product.image.presence?  %>
  <span>目前的商品图</span>
  <hr>
  <%= image_tag(@product.image.thumb.url) %>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>


  <%= f.submit "submit",data: { disable_with:"submitting"} %>
<% end %>
